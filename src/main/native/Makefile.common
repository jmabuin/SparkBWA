CC = gcc
CXX = g++
JAVAC = javac
JAR = jar
RMR = rm -Rf
RM = rm -f

MAKE = make
LOCATION = `pwd`
#SRC_DIR = ./src
BUILD_DIR = build

# JAVA variables #######
ifndef JAVA_HOME
JAVA_HOME = /usr/lib/jvm/java
JAVA_HOME_INCLUDES = -I$(JAVA_HOME)/include -I$(JAVA_HOME)/include/linux
else
JAVA_HOME_INCLUDES = -I$(JAVA_HOME)/include -I$(JAVA_HOME)/include/linux
endif

# Bwa variables ########
BWA_DIR = ./bwa-0.7.15
SPARKBWA_FLAGS = -c -g -Wall -Wno-unused-function -O2 -fPIC -DHAVE_PTHREAD -DUSE_MALLOC_WRAPPERS $(JAVA_HOME_INCLUDES)
LIBBWA_FLAGS = -shared -o
LIBBWA_LIBS = -lrt -lz

# Cushaw variables ########
CUSHAW_DIR = ./cushaw3-v3.0.3
SPARKCUSHAW_FLAGS = -c -g -Wall -Wno-unused-function -O2 -fPIC -DHAVE_PTHREAD -DUSE_MALLOC_WRAPPERS $(JAVA_HOME_INCLUDES)
LIBCUSHAW_FLAGS = -shared -o
LIBCUSHAW_LIBS = -lrt -lz